  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>KeepFlix</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <script src="/javascripts/scripts.js">

    </script>
  </head>
  <body>
    <div class="wrapper">
      <h1><a href="/">KeepFlix</a></h1>
      <h2>Your Personal Movie Library</h2>

        <% if flash[:error] %>
          <h3 style="color:red;"><%= flash[:error] %></h3>
        <% end %>
        <% if flash[:message] %>
          <h3 style="color:green;"><%= flash[:message] %></h3>
        <% end %>
        <%= yield %>

        <div class="sidebar">
          <h3>Shortcuts</h3>
          <ul>
            <% if logged_in? %>
              <a href="/">Profile</a>
              <a href="/movies">My Movies</a>
              <a href="/logout">Log Out</a>
            <% else %>
              <li><a href="/signup">Sign Up</a></li>
              <li><a href="/login">Log In</a></li>
            <% end %>
          </ul>
        </div>
      <footer class="branding">
        <small>&copy; 2020 <strong>KeepFlix</strong></small>
      </footer>
    </div>


    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
