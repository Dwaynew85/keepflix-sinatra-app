<% if !@user.pic_url %>
  <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.pngwing.com%2Fen%2Ffree-png-njjac&psig=AOvVaw1AHA7lZHLIRvdLTTRPWJQU&ust=1598317575310000&source=images&cd=vfe&ved=0CAIQjRxqFwoTCJjC2JLTsusCFQAAAAAdAAAAABAD" alt="Generic Profile Pic">
<% else %>
  <img src="<%= @user.pic_url %>" alt="profile pic" style="width:100px;height:100px;">
<% end %>
<h1>Welcome, <%= @user.name %>!</h1>
<p><%= @user.email %></p>

<div class="movie-post"> <!-- add css for border and background color -->
  <% @movies.each do |movie| %>
    <h4><a href="<%= movie.link %>" target="_blank"><img src="<%= movie.image_url %>" alt="<%= movie.title %>" ></a></h4>
    <h3><%= movie.title %></h3><br>
    <h5><%= movie.user.name %> says:</h5>
    <h4><%= movie.comments %></h4>
    <h4><strong><%= movie.opinion %></strong></h4>
    <h6><%= (movie.updated_at + Time.zone_offset('EST')).strftime("%a, %b %d %Y %I:%M%p") %></h6>
    <br><br>
  <% end %>
</div>
